{% extends 'base.jinja' %}

{% block content %}
    <div class="container-fluid bg-dark text-white py-5 mb-4">
        <div class="container text-center">
            <h1 class="display-4 fw-bold mb-4">Home Improvement Services</h1>
            <p class="lead">
                Transform your home with JPM and Sons. We specialize in a range
                of home improvement services, including kitchen remodeling,
                bathroom renovations, roofing, and siding. Our team delivers
                high-quality solutions to enhance your living spaces and
                increase your home's value.
            </p>
          
        </div>
    </div>

    <div class="container my-5 p-0">
        <!-- Section Header -->
        <div class="row text-center mb-5">
            <h2 class="fw-bold">Our Home Improvement Services</h2>
            <p class="text-muted fs-5">
                Transform your living spaces with our professional home
                improvement solutions, designed for beauty and functionality.
            </p>
        </div>

        <!-- Services List -->
        <div class="row">
            <ul>
                {% for sub_service in service.sub_services %}
                    <li class="list-unstyled mb-5 px-3">
                        <div
                            class="row align-items-start g-4 {% if loop.index is even %}flex-row-reverse{% endif %}"
                            style="background-color: {% if loop.index is even %}#f8f9fa{% else %}#ffffff{% endif %}; border-radius: 15px;"
                        >
                            <!-- Left Section: Image, Name, and Highlights -->
                            <div class="col-md-5 p-lg-4">
                                <div
                                    class="card border-0 shadow-lg hover-shadow"
                                >
                                    <img
                                        src="{{ sub_service.image_path }}"
                                        class="card-img-top"
                                        alt="{{ sub_service.name }} image"
                                        style="height: 350px; object-fit: cover;"
                                    />
                                    <div class="card-body">
                                        <h5
                                            class="card-title fw-bold text-primary"
                                        >
                                            {{ sub_service.name }}
                                        </h5>
                                        <p
                                            class="card-text text-small text-muted"
                                        >
                                            {{ sub_service.description }}
                                        </p>

                                        <ul class="list-inline mt-3 g-2">
                                            {% for feature in sub_service.features %}
                                                <li
                                                    class="list-inline-item m-1"
                                                >
                                                    <span
                                                        class="badge border border-dark 
                text-dark py-2 px-3"
                                    style="background-color: hsl(28, 84%, 77%);"


                                                    >
                                                        <i
                                                            class="bi 
                    {% if loop.index == 1 %}bi-shield-fill-check{% elif loop.index == 2 %}bi-cash-coin{% elif loop.index == 3 %}bi-award-fill{% elif loop.index == 4 %}bi-grip-horizontal{% endif %} me-1"
                                                        ></i>
                                                        {{ feature }}
                                                    </span>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Right Section: Long Description and Call-to-Action -->
                            <div class="col-md-6 p-4 p-lg-4">
                                <p class="text-dark text-small fs-4 lh-base">
                                    {{ sub_service.long_description }}
                                </p>
                                <hr />
                                <div class="mt-3">
                                    <ul class="list-unstyled">
                                        {% for benefit in sub_service.benefits %}
                                            <li class="mb-2">
                                                <i
                                                    class="bi 
                    {% if loop.index == 1 %}
                                                        bi-check-circle
                                                        text-primary
                                                    {% elif loop.index == 2 %}
                                                        bi-award-fill
                                                        text-warning
                                                    {% elif loop.index == 3 %}
                                                        bi-lightning-charge
                                                        text-success
                                                    {% endif %} me-2"
                                                ></i>
                                                {{ benefit }}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>

                                <!-- Call-to-Action Buttons -->
                                <div
                                    class="mt-4 d-flex justify-content-center flex-wrap"
                                >
                                    <!-- Render One Random Contact Button -->
                                    {% set contact_button = buttons.contact | random %}
                                    <a
                                        href="{{ contact_button.link }}"
                                        class="btn {{ contact_button.style }} me-2 mb-2"
                                    >
                                        {{ contact_button.label }}
                                    </a>

                                    <!-- Render One Random Gallery Button -->
                                    {% set gallery_button = buttons.gallery | random %}
                                    <a
                                        href="{{ gallery_button.link }}"
                                        class="btn {{ gallery_button.style }} me-2 mb-2"
                                    >
                                        {{ gallery_button.label }}
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Divider -->
                        <hr class="my-5" />
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock content %}
