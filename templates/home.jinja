   <section class="py-5 my-5">
    <!-- Flash Messages -->
   {% from "macros.jinja" import render_flashes %}
    {{ render_flashes() }}

    <!-- Form Container -->
    <div
        class="container p-4 p-lg-5" id = "Form-container"
    >
        <!-- Section Header -->
        <header class="text-start mb-4">
            <h3 class="fw-bold">
                Ready when you are, let’s bring your ideas to life with ease.
            </h3>
            <p class="text-muted">
                Rest assured, we respect your privacy—no spam or junk emails, just timely updates and professional communication.
            </p>
        </header>

        <!-- Form Section -->
        <form
            action="/"
            method="post"
            class="row g-3 align-items-center justify-content-center"
            aria-labelledby="quickForm-heading"
        >
            {{ form.hidden_tag() }}

            <!-- Name Field -->
            <div class="col-md-3 col-sm-6">
                <label for="name" class="form-label">{{ form.name.label }}</label>
                {{ form.name(class_="form-control", id="name") }}
            </div>

            <!-- Phone Field -->
            <div class="col-md-3 col-sm-6">
                <label for="phone" class="form-label">{{ form.phone.label }}</label>
                {{ form.phone(class_="form-control", id="phone") }}
            </div>

            <!-- Email Field -->
            <div class="col-md-3 col-sm-6">
                <label for="email" class="form-label">{{ form.email.label }}</label>
                {{ form.email(class_="form-control", id="email") }}
            </div>

            <!-- Service Type Field -->
            <div class="col-md-3 col-sm-6">
                <label for="service_type" class="form-label">{{ form.service_type.label }}</label>
                {{ form.service_type(class_="form-select form-control", id="service_type") }}
            </div>

            <!-- Submit Button -->
            <div class="col-12 text-center mt-4">
                <button
                    type="submit"
                    class="btn btn-success btn-md px-4"
                    aria-label="Schedule your free quote today"
                >
                    Schedule your free quote today
                </button>
            </div>
        </form>
    </div>
</section>

