{% block content %}



<!-- Floating Specks -->

<section
    id="hero-section"
    class="container landing position-relative h-100 p-3 d-flex flex-column"
    aria-labelledby="hero-heading"
>
    <div class="row align-items-center flex-grow-1">
        <!-- Left Column -->
        <div class="col-md-6">
            <h1 class="d-block d-lg-none text-black my-3">
                Get started on building the home of your dreams today
            </h1>
            <h1 id="hero-heading" class="text-black header mb-4 d-none d-lg-block">
                Get started on building the home of your dreams today
