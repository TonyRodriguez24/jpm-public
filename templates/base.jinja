<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Google tag -->

        <script
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-2HYHDJVPGJ"
        ></script>
        <script>
            window.dataLayer = window.dataLayer || []
            function gtag() {
                dataLayer.push(arguments)
            }
            gtag('js', new Date())
            gtag('config', 'G-2HYHDJVPGJ')
        </script>
        <!-- End Google tag -->

        <meta
            name="google-site-verification"
            content="oV5LMHA_GIQ9rXha3IdhEumLvvLX4GswXqFwZZt8qK4"
        />

        <!-- return meta_description in view functions -->
        {% for key, val in page_information.items() %}
            {% if key == active_page %}
                <meta name="description" content="{{ val.meta_description }}" />
                <title>{{ val.title }}</title>
            {% endif %}
        {% endfor %}
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- insert fonts here -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
            rel="stylesheet"
        />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Forum&family=Jacques+Francois&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
            rel="stylesheet"
        />

        <link
            rel="icon"
            href="assets/icons/logo-transparent.png"
            type="image/png"
        />
        <link
            rel="canonical"
            href="https://www.jpmandsons.com/{% if active_page != 'home' %}{{ active_page }}{% endif %}"
        />
        <link
            rel="stylesheet"
            href="{{ url_for('static', filename='global.css') }}"
        />

        <!-- custom css -->
        {% block custom_css %}
        {% endblock custom_css %}
    </head>
    <body>
        {% from "macros.jinja" import navbar %}
        {{ navbar(active_page) }}

        

        {% block content %}
        {% endblock content %}
        {% from "macros.jinja" import footer %}
        {{ footer() }}
        <!-- 2 bootstrap scripts-->
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"
        ></script>

    </body>
</html>
