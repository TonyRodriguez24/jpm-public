<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Google tag -->

        <script
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-2HYHDJVPGJ"
        ></script>
        <script>
            window.dataLayer = window.dataLayer || []
            function gtag() {
                dataLayer.push(arguments)
            }
            gtag('js', new Date())
            gtag('config', 'G-2HYHDJVPGJ')
        </script>
        <!-- End Google tag -->

        <meta
            name="google-site-verification"
            content="oV5LMHA_GIQ9rXha3IdhEumLvvLX4GswXqFwZZt8qK4"
        />

        <!-- return meta_description in view functions -->
        {% for key, val in page_information.items() %}
            {% if key == active_page %}
                <meta name="description" content="{{ val.meta_description }}" />
                <title>{{val.title}}</title>
            {% endif %}
        {% endfor %}
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        

        <!-- insert fonts here -->

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
        <link
            rel="icon"
            href="assets/icons/logo-transparent.png"
            type="image/png"
        />
        <link
            rel="canonical"
            href="https://www.jpmandsons.com/{% if active_page != 'home' %}{{ active_page }}{% endif %}"
        />
        <link
            rel="stylesheet"
            href="{{ url_for('static', filename='global.css') }}"
        />

        <!-- custom css -->
        {% block custom_css %}
        {% endblock custom_css %}
    </head>
    <body>
        {% from "macros.jinja" import navbar %}
        {{ navbar(active_page) }}

        <div class="container" style="margin-top: 2em">
            {% with messages = get_flashed_messages(with_categories=true) %}
                {% if messages %}
                    <ul class="flashes">
                        {% for category, message in messages %}
                            <li class="alert alert-{{ category }}">
                                {{ message }}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            {% endwith %}
        </div>

        {% block content %}
        
        {% endblock content %}
        {% from "macros.jinja" import footer %}
        {{ footer() }}
        <!-- 2 bootstrap scripts-->
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
