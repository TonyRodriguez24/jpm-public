{% extends 'base.jinja' %}

{% block custom_css %}
    <link
        rel="stylesheet"
        href="{{ url_for('static',filename='gallery.css') }}"
    />
{% endblock custom_css %}

{% block content %}


    <!-- Loading Screen -->
    <div id="loading-screen">
        <div class="spinner"></div>
        <p>Loading...</p>
    </div>

    
<section id="gallery" class="container-fluid p-lg-5">
    <div class="row align-items-center">
        <!-- Left Side: Paragraph -->
        <div class="col-lg-6 text-start">
            <h1 class="fw-bold mb-3">Our Gallery</h1>
            <p class="text-muted">
                Explore our gallery showcasing a wide range of completed projects, from stunning paver installations and meticulous
                pressure washing transformations to professional sealing and elegant home renovations. Each project reflects our commitment
                to quality, precision, and creating spaces that are both functional and visually striking. Whether it's enhancing outdoor
                areas or modernizing interiors, our work is designed to exceed expectations and bring your vision to life.
            </p>
        </div>

        <!-- Right Side: Stats -->
        <div class="col-lg-6">
            <div class="row text-center g-3">
                <!-- Stat 1: Towns Served -->
                <div class="col-4">
                    <div class="p-4 shadow rounded">
                        <ion-icon name="location-outline" size="large" class="text-success"></ion-icon>
                        <h3 class="fw-bold my-2">100+</h3>
                        <p class="text-muted">Towns Served on Long Island</p>
                    </div>
                </div>

                <!-- Stat 2: Same-Day Inquiries -->
                <div class="col-4">
                    <div class="p-4 shadow rounded">
                        <ion-icon name="chatbubbles-outline" size="large" class="text-success"></ion-icon>
                        <h3 class="fw-bold my-2">Same-Day</h3>
                        <p class="text-muted">Response to Inquiries</p>
                    </div>
                </div>

                <!-- Stat 3: Years of Experience -->
                <div class="col-4">
                    <div class="p-4 shadow rounded">
                        <ion-icon name="calendar-outline" size="large" class="text-success"></ion-icon>
                        <h3 class="fw-bold my-2">35+</h3>
                        <p class="text-muted">Years of Experience</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Divider -->
    <hr class="d-flex my-4 my-lg-5 w-100 w-lg-75 m-auto" />

