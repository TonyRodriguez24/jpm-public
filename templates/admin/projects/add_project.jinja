{% extends 'base.jinja' %}

{% block content %}
    <div class="container mt-5">
    <h2>{{ title }}</h2>
    <form method="POST" novalidate>
        {{ form.hidden_tag() }}

        <div class="mb-3">
            {{ form.type_of_work.label }} <span class="text-danger">*</span>
            {{ form.type_of_work(class="form-control") }}
            {% for error in form.type_of_work.errors %}
                <div class="text-danger">{{ error }}</div>
            {% endfor %}
        </div>

        <div class="mb-3">
            {{ form.service_id.label }} <span class="text-danger">*</span>
            {{ form.service_id(class="form-select") }}
            {% for error in form.service_id.errors %}
                <div class="text-danger">{{ error }}</div>
            {% endfor %}
        </div>

        <button type="submit" class="btn btn-primary">{{ title }}</button>
        <a href="{{ url_for('dashboard') }}" class="btn btn-secondary">Cancel</a>
    </form>
</div>

{% endblock content %}
