{% extends 'base.jinja' %}

{% block content %}
<div class="container">
    <h3 class="p-3">Hi, {{ admin.username }}</h3>

    <!-- Contacts Section -->
    <h4 class="my-4">Contacts</h4>
    <a href="{{ url_for('add_contact') }}" class="btn btn-success mb-3">Add Contact</a>
    <div class="table-responsive d-none d-md-block">
        <table class="table table-hover table-bordered table-striped align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Service Type</th>
                    <th>Message</th>
                    <th>Created At</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                <tr>
                    <td>{{ contact.name }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.address }}</td>
                    <td>
                        {% for key, val in services.items() %}
                        {% if val.id == contact.service_type %}
                        {{ key.capitalize() }}
                        {% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ contact.message }}</td>
                    <td>{{ contact.created_at.strftime('%m/%d/%y') }}</td>
                    <td>{{ contact.phone }}</td>
                    <td>
                        <a href="{{ url_for('edit_contact', id=contact.id) }}" class="btn btn-primary btn-sm">Edit</a>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="{{ contact.id }}" data-type="contact">Delete</button>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="d-block d-md-none">
        {% for contact in contacts %}
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">{{ contact.name }}</h5>
                <p class="card-text"><strong>Email:</strong> {{ contact.email }}</p>
                <p class="card-text"><strong>Address:</strong> {{ contact.address }}</p>
                <p class="card-text">
                    <strong>Service Type:</strong>
                    {% for key, val in services.items() %}
                    {% if val.id == contact.service_type %}
                    {{ key.capitalize() }}
                    {% endif %}
                    {% endfor %}
                </p>
                <p class="card-text"><strong>Message:</strong> {{ contact.message }}</p>
                <p class="card-text"><strong>Created At:</strong> {{ contact.created_at.strftime('%m/%d/%y') }}</p>
                <p class="card-text"><strong>Phone:</strong> {{ contact.phone }}</p>
                <a href="{{ url_for('edit_contact', id=contact.id) }}" class="btn btn-primary btn-sm">Edit</a>
                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="{{ contact.id }}" data-type="contact">Delete</button>
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Projects Section -->
    <h4 class="my-4">Projects</h4>
    <a href="{{ url_for('add_project') }}" class="btn btn-success mb-3">Add Project</a>
    <div class="table-responsive d-none d-md-block">
    <table class="table table-hover table-bordered table-striped align-middle">
        <thead>
            <tr>
                <th>Type of Work</th>
                <th>Service Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for project in projects %}
            <tr>
                <!-- Display the type of work -->
                <td>{{ project.type_of_work }}</td>
                
                <!-- Match and display the service type -->
                <td>
                    {% for key, val in services.items() %}
                    {% if val.id == project.service_id %}
                    {{ key.capitalize() }}
                    {% endif %}
                    {% endfor %}
                </td>
                
                <!-- Actions: Edit and Delete -->
                <td>
                    <a href="{{ url_for('edit_project', id=project.id) }}" class="btn btn-primary btn-sm">Edit</a>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="{{ project.id }}" data-type="project">Delete</button>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>


  <div class="d-block d-md-none">
    {% for project in projects %}
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">{{ project.type_of_work }}</h5>
            <p class="card-text">
                <strong>Service Type:</strong>
                {% for key, val in services.items() %}
                {% if val.id == project.service_id %}
                {{ key.capitalize() }}
                {% endif %}
                {% endfor %}
            </p>
            <a href="{{ url_for('edit_project', id=project.id) }}" class="btn btn-primary btn-sm">Edit</a>
            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="{{ project.id }}" data-type="project">Delete</button>
        </div>
    </div>
    {% endfor %}
</div>

</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this <span id="deleteItemType"></span>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteModalForm" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    const deleteModal = document.getElementById('deleteModal');
    const deleteModalForm = document.getElementById('deleteModalForm');
    const deleteItemType = document.getElementById('deleteItemType');

    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget; // Button that triggered the modal
        const itemId = button.getAttribute('data-id'); // Extract ID
        const itemType = button.getAttribute('data-type'); // Extract Type

        // Update modal content
        deleteItemType.textContent = itemType === 'contact' ? 'contact' : 'project';

        // Update the form action
        deleteModalForm.action = itemType === 'contact'
            ? `/admin/delete-contact/${itemId}`
            : `/admin/delete-project/${itemId}`;
    });
</script>
{% endblock %}
