{% extends 'base.jinja' %}

{% block content %}

<div id = 'thank-you' class="container text-center py-5">
    <!-- Thank You Card -->
    <div class="card border-0 mx-auto p-4" style="max-width: 600px; border-radius: 15px;">
        <div class="text-center">
            <!-- Thank You Image -->
            <img src="/static/images-webp/thank_you.webp" alt="Thank You" class="img-fluid mb-4" style="width: 300px;">
            
            <!-- Title -->
            <h2 class="fw-bold text-primary mb-3">Thank You!</h2>

            <!-- Subtitle -->
            <p class="fs-5 text-muted">
                Your submission has been received. We appreciate your interest and will get back to you shortly!
            </p>

            <!-- Call-to-Action Buttons -->
            <div class="d-flex justify-content-center mt-4 gap-3">
                <a href="/" class="btn btn-outline-primary btn-md">
                    Return to Home
                </a>
                <a href="/gallery" class="btn btn-success btn-md">
                    View Gallery
                </a>
            </div>
        </div>
    </div>
</div>

{% endblock content %}
