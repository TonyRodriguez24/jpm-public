{% extends 'base.jinja' %}

{% block content %}
    <!-- Pressure Washing Services -->
    <div class="container-fluid bg-dark text-white py-5 mb-4">
        <div class="container text-center">
            <h1 class="display-4 fw-bold mb-4">Pressure Washing Services</h1>
            <p class="lead">
                Keep your property looking its best with our pressure washing
                services. From driveways and patios to siding and decks, JPM and
                Sons uses advanced equipment to remove dirt, grime, and stains,
                restoring the original beauty of your surfaces.
            </p>
            <a href="{{url_for('contact_us')}}" class="btn btn-primary btn-md mt-3"
                >Get a Free Quote</a
            >
        </div>
    </div>

     <div class="container my-5">
        <!-- Section Header -->
        <div class="row text-center mb-5">
            <h2 class="fw-bold">Our Asphalt Services</h2>
            <p class="text-muted fs-5">
                Explore our range of high-quality asphalt solutions tailored to
                meet your needs.
            </p>
        </div>

        <!-- Services List -->
        <div class="row">
    <ul class="ps-0 w-100">
        {% for sub_service in service.sub_services %}
            <li class="list-unstyled mb-5">
                <div
                    class="row align-items-start g-4 {% if loop.index is even %}flex-row-reverse{% endif %}"
                    style="background-color: {% if loop.index is even %}#f8f9fa{% else %}#ffffff{% endif %}; padding: 20px; border-radius: 15px;"
                >
                    <!-- Left Section: Image, Name, and Highlights -->
                    <div class="col-md-6">
                        <div class="card border-0 shadow-lg hover-shadow">
                            <img
                                src="{{ sub_service.image_path }}"
                                class="card-img-top rounded"
                                alt="{{ sub_service.name }} image"
                                style="height: 350px; object-fit: cover;"
                            />
                            <div class="card-body">
                                <h5 class="card-title fw-bold text-primary">
                                    {{ sub_service.name }}
                                </h5>
                                <p class="card-text text-muted">
                                    {{ sub_service.description }}
                                </p>

                                <!-- Highlights Section -->
                                <!-- Highlights Section -->
<!-- Highlights Section -->
<!-- Highlights Section -->
<ul class="list-inline mt-3 g-2">
    {% for feature in sub_service.features %}
        <li class="list-inline-item m-1">
            <span class="badge bg-warning
                text-dark py-2 px-3">
                <i class="bi 
                    {% if loop.index == 1 %}bi-shield-fill-check{% elif loop.index == 2 %}bi-cash-coin{% elif loop.index == 3 %}bi-award-fill{% elif loop.index == 4 %}bi-grip-horizontal{% endif %} me-1"></i>
                {{ feature }}
            </span>
        </li>
    {% endfor %}
</ul>



                            </div>
                        </div>
                    </div>

                    <!-- Right Section: Long Description and Call-to-Action -->
                    <div class="col-md-6">
                        <p class="text-dark fs-5 lh-base">
                            {{ sub_service.long_description }}
                        </p>

                        <!-- Additional Information -->
                        <!-- Additional Information -->
<div class="mt-3">
    <ul class="list-unstyled">
        {% for benefit in sub_service.benefits %}
            <li class="mb-2">
                <i class="bi 
                    {% if loop.index == 1 %}bi-check-circle text-primary{% elif loop.index == 2 %}bi-award-fill text-warning{% elif loop.index == 3 %}bi-lightning-charge text-success{% endif %} me-2"></i>
                {{ benefit }}
            </li>
        {% endfor %}
    </ul>
</div>


                        <!-- Call-to-Action Buttons -->
                        <div class="mt-4 d-flex justify-content-center">
                            {% for button in sub_service.buttons %}
                                <a
                                    href="{{ button.link }}"
                                    class="btn {{ button.style }} me-2"
                                >
                                    {{ button.label }}
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <!-- Divider -->
                <hr class="my-5" />
            </li>
        {% endfor %}
    </ul>
</div>

    </div>
{% endblock content %}
